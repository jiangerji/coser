<resources>

    <style name="AppBaseTheme" parent="android:Theme.Light"></style>

    <style name="AppTheme" parent="AppBaseTheme"></style>

    <style name="AppTheme.ActionBar">
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:dividerVertical">@android:color/transparent</item>
        <item name="android:dividerHorizontal">@android:color/transparent</item>
        <item name="android:actionBarStyle">@style/MyActionBarStyle</item>
        <item name="android:actionDropDownStyle">@style/MyDropDownNav</item>
        <item name="android:actionMenuTextAppearance">@style/OctopusMenuTittleStyle</item>
        <item name="android:homeAsUpIndicator">@drawable/ic_home_up_black</item>
    </style>

    <style name="MyActionBarStyle" parent="@android:style/Widget.Holo.Light.ActionBar.Solid.Inverse">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:height">48dp</item>
        <item name="android:background">@drawable/action_bar_bg</item>
        <item name="android:backgroundStacked">@null</item>
        <item name="android:backgroundSplit">@null</item>
        <item name="android:titleTextStyle">@style/MyTitleTextStyle</item>
    </style>

    <style name="MyDropDownNav" parent="@android:style/Widget.Holo.Light.Spinner"></style>

    <style name="OctopusMenuTittleStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title.Inverse">
        <item name="android:textColor">@color/color1_orange_normal</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="MyTitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Title.Inverse">
        <item name="android:textColor">@color/color6_black_normal</item>
        <item name="android:textSize">16sp</item>
    </style>

</resources>